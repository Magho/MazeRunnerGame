<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="600.0" styleClass="bg" stylesheets="@win_layout.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.WinController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="300.0" prefWidth="600.0">
         <children>
            <Label styleClass="congrats-lbl" stylesheets="@win_layout.css" text="GAME ENDED">
               <font>
                  <Font name="Ebrima" size="12.0" />
               </font>
            </Label>
            <Label fx:id="score" styleClass="score" stylesheets="@win_layout.css" text="SCORE : ">
               <font>
                  <Font name="Ebrima" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="playerName" alignment="CENTER" prefHeight="50.0" prefWidth="256.0" promptText="Enter Your Name" styleClass="text" stylesheets="@win_layout.css">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#onSubmitClick" styleClass="submit" stylesheets="@win_layout.css" text="Submit" />
         </children>
         <padding>
            <Insets left="50.0" right="50.0" top="20.0" />
         </padding>
      </VBox>
   </children>
